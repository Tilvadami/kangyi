<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_index"
    android:orientation="vertical">
    

    <FrameLayout
        android:id="@+id/topFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#008080">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/pic"/>

        <ImageView
            android:id="@+id/mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"/>

        <LinearLayout
            android:id="@+id/topLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/topTV_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="疫情实时大数据报告"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/topTV_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新型冠状病毒肺炎"
                android:textColor="#fff"
                android:textSize="19sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/context_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_index">

            <LinearLayout
                android:id="@+id/btn_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_index">

                <LinearLayout
                    android:id="@+id/btn_top_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_index_top"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/rg"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <RadioButton
                            android:id="@+id/guoNei"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:button="@null"
                            android:text="国内疫情"
                            android:textSize="20sp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:background="@drawable/bg_index_btn"
                            android:checked="true"/>

                        <RadioButton
                            android:id="@+id/guoWai"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:button="@null"
                            android:text="国外疫情"
                            android:textSize="20sp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:background="@drawable/bg_index_btn"/>

                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>
            <FrameLayout
                android:id="@+id/fl4fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_index">

            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</ScrollView>